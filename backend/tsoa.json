{
  "entryFile": "src/app.ts",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3
  },
  "routes": {
    "entryFile": "./src/controllers",
    "routesDir": "./src/controllers/http"
  },
  "compilerOptions": {
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  }
}
